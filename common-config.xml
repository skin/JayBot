<?xml version="1.0" encoding="UTF-8"?>

<project name="common-config" xmlns:artifact="urn:maven-artifact-ant">
	
	<dirname property="imported.basedir" file="${ant.file.common-config}"/>
	
	<typedef resource="org/apache/maven/artifact/ant/antlib.xml" uri="urn:maven-artifact-ant">
		<classpath>
			<pathelement location="${MAVEN_TASK}" />
		</classpath>
	</typedef>

	<artifact:pom id="jayBot.dependencies" file="${imported.basedir}/pom.xml" />

	<artifact:dependencies filesetId="jayBot.fid" pathId="jayBot.pid" pomRefId="jayBot.dependencies">
		<artifact:localRepository id="libraries" location="${PROJECT_LIB}" />
		<artifact:remoteRepository id="remote.repository" url="${REPO_LIBRARY}" />		
	</artifact:dependencies>
	
	<!-- per gli environment -->
	<artifact:dependencies filesetId="jayBot.dep" pomRefId="jayBot.dependencies" useScope="runtime">
     <artifact:localRepository id="libraries" location="${PROJECT_LIB}" /> 
    </artifact:dependencies>
	
	<target name="askEnv" unless="environment">
			<input
				    message="Seleziona environment?"
				    validargs="SVIL,CERT,PROD"
				    addproperty="environment"
				    defaultvalue="SVIL"/>
		</target>
</project>
